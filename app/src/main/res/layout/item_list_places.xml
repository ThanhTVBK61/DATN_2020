<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/imgListPlaces"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvNameListPlaces"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/imgListPlaces"
            android:text="Công viên Thống Nhất  nhất Công viên thống nhất"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/ibFavouriteListPlaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/colorWhite"/>

        <TextView
            android:id="@+id/tvAddressListPlaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNameListPlaces"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/imgListPlaces"
            android:text="101A Phương Mai Đống Đa Hà Nội"/>

        <RatingBar
            android:id="@+id/ratingMarkListPlaces"
            style="@style/RatingBarStarPost"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="15dp"
            android:layout_toEndOf="@id/imgListPlaces"
            android:isIndicator="true"/>

        <TextView
            android:id="@+id/tvNumberRatingListPlaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_toEndOf="@+id/ratingMarkListPlaces"
            android:text=" 123 đánh giá"
            android:textColor="@color/colorBlack" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>