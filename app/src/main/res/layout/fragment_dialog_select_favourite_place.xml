<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingBottom="20dp">
    <TextView
        android:id="@+id/tvFavouritePlaceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Danh sách chuyến đi"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"/>
    <ImageView
        android:id="@+id/ivCloseSexDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:backgroundTint="@color/colorBlue700"
        android:src="@drawable/ic_clear_blue"/>

    <RadioGroup
        android:id="@+id/rgSelectFavouritePlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFavouritePlaceTitle"
        android:layout_marginTop="10dp"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingBottom="20dp" />

    <TextView
        android:id="@+id/tvSelectFavouritePlace"
        android:layout_below="@id/rgSelectFavouritePlace"
        style="@android:style/Widget.Button"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="Chọn"
        android:textColor="@color/colorBlue700"
        android:textSize="16sp" />
</RelativeLayout>