<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="105dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/shape_container_sign_up"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/ivBackSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="?attr/selectableItemBackground"
        android:backgroundTint="@color/colorBlack"
        android:padding="5dp"
        android:src="@drawable/ic_back"/>

    <TextView
        android:id="@+id/tvNotificationSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivBackSignUp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"
        android:text="*Tên đăng nhập đã tồn tại"
        android:textColor="@color/colorRed"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rlUsernameSignUp"
        android:layout_below="@+id/tvNotificationSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_edittext_login"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tvUsernameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:text="Tên đăng nhập*" />

        <EditText
            android:id="@+id/etUsernameSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUsernameTitle"
            android:hint="Nhập tên đăng nhập"
            android:textColorHint="@color/colorGray"
            android:textSize="15sp"
            android:background="@null"
            android:textColor="@color/colorBlack"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_user_outline"
            android:tint="@color/colorGray"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlPasswordSignUp"
        android:layout_below="@+id/rlUsernameSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_edittext_login"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tvPasswordTitleSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:text="Mật khẩu*" />

        <EditText
            android:id="@+id/etPasswordSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPasswordTitleSignUp"
            android:background="@null"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGray"
            android:textSize="15sp"/>

        <CheckBox
            android:id="@+id/cbPasswordSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:tint="@color/colorGray"
            android:button="@drawable/selector_checkbox_visibility"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlEmailSignUp"
        android:layout_below="@+id/rlPasswordSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_edittext_login"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tvEmailTitleSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:text="Email*" />

        <EditText
            android:id="@+id/etEmailSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEmailTitleSignUp"
            android:background="@null"
            android:hint="Nhập địa chỉ email"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGray"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_mail_outline"
            android:tint="@color/colorGray"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlAddressSignUp"
        android:layout_below="@+id/rlEmailSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_edittext_login"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tvAddressTitleSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:text="Địa chỉ" />

        <EditText
            android:id="@+id/etAddressSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddressTitleSignUp"
            android:background="@null"
            android:hint="Nhập địa chỉ"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGray"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_location_edit_outline"
            android:tint="@color/colorGray"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlBirthdaySignUp"
        android:layout_below="@+id/rlAddressSignUp"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext_login"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tvBirthdayTitleSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:text="Ngày sinh" />

        <TextView
            android:id="@+id/tvBirthdaySignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBirthdayTitleSignUp"
            android:text="..."
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_expand"
            android:tint="@color/colorGray"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlSexSignUp"
        android:layout_below="@+id/rlAddressSignUp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_edittext_login"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tvSexTitleSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:text="Giới tính" />

        <TextView
            android:id="@+id/tvSexSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSexTitleSignUp"
            android:text="..."
            android:textColor="@color/colorBlack"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_expand"
            android:tint="@color/colorGray"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_below="@+id/rlBirthdaySignUp"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_buttonlogin"
        android:text="ĐĂNG KÝ"
        android:textColor="@color/colorWhite" />

</RelativeLayout>
