<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:title="Bình luận"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListComment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tbComment"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="60dp"
        android:clipToPadding="false"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <EditText
        android:id="@+id/etInputComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/ibSend"
        android:backgroundTint="@color/comment"
        android:background="@drawable/shape_rounded_edittext"
        android:hint="Viết bình luận ..."
        android:paddingStart="20dp"
        android:paddingTop="7dp"
        android:paddingEnd="20dp"
        android:paddingBottom="7dp"/>

    <ImageButton
        android:id="@+id/ibSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_send"
        android:backgroundTint="@color/colorWhite"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"/>

</RelativeLayout>