<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.guest.GuestActivity">

    <FrameLayout
        android:id="@+id/flGuest"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btnBottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:theme="@style/NavigationBottom"
        app:itemIconTint="@drawable/selector_home"
        app:itemTextColor="@drawable/selector_home"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_bottom_navigation"/>

</RelativeLayout>