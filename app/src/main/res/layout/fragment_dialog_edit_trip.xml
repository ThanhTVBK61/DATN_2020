<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="380dp"
    android:minHeight="400dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Chỉnh sửa thông tin chuyến đi"
        android:textColor="@color/colorBlack"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:text="Tên chuyến đi"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/etNameTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="textNoSuggestions"
        android:hint="Nhập tên mới chuyến đi"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:text="Mô tả"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/etDescriptionTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:inputType="textNoSuggestions"
        android:hint="Thêm mô tả cho chuyến đi"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <TextView
            android:id="@+id/tvSaveEditTrip"
            style="@android:style/Widget.Button"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="Lưu"
            android:textColor="@color/colorGray700"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvCancelEditTrip"
            style="@android:style/Widget.Button"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="Hủy"
            android:textColor="@color/colorGray700"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>